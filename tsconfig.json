{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true, // recomendado junto con el anterior
    "strict": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/index.tsx",
    "app/(app)/index.tsx"
  ],
  "extends": "expo/tsconfig.base"
}
